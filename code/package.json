{
	"name": "room-food",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:frontend": "npm run frontend:dev",
		"frontend:dev": "ng serve",
		"frontend:build": "ng build --configuration production --output-hashing none --base-href /room-food/",
		"build": "ng build",
		"build:browser": "npm run frontend:build",
		"build:ssr": "ng run roomFood:build:production",
		"backend:build": "npm run build:ssr",
		"backend:start": "node dist/roomFood/server/server.mjs",
		"start:prod": "npm run backend:build && npm run backend:start",
		"serve:ssr:roomFood": "node dist/roomFood/server/server.mjs",
		"serve:ssr:RoomFood": "npm run serve:ssr:roomFood",
		"backend:serve": "npm run serve:ssr:RoomFood",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"init-db": "npx tsx src/backend/init-db.ts"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "angular"
				}
			}
		]
	},
	"private": true,
	"packageManager": "npm@10.9.3",
	"dependencies": {
		"@angular/common": "^21.1.0",
		"@angular/compiler": "^21.1.0",
		"@angular/core": "^21.1.0",
		"@angular/forms": "^21.1.0",
		"@angular/platform-browser": "^21.1.0",
		"@angular/platform-server": "^21.1.0",
		"@angular/router": "^21.1.0",
		"@angular/ssr": "^21.1.3",
		"better-sqlite3": "^12.6.2",
		"express": "^5.1.0",
		"http-status-codes": "^2.3.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^21.1.3",
		"@angular/cli": "^21.1.3",
		"@angular/compiler-cli": "^21.1.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.1",
		"@types/node": "^20.19.33",
		"cors": "^2.8.6",
		"jsdom": "^27.1.0",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.2",
		"vitest": "^4.0.8"
	}
}
