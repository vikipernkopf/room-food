{
	"name": "room-food",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "npm run frontend:start",
		"watch": "ng build --watch --configuration development",
		"build": "ng build",
		"build:ssr": "ng run roomFood:build:production",
		"serve:ssr:RoomFood": "node dist/roomFood/server/server.mjs",
		"frontend:build": "ng build --configuration production --output-hashing none --base-href /room-food/ && node scripts/postprocess-index.js",
		"frontend:start": "ng serve --proxy-config proxy.conf.json",
		"frontend": "npm run frontend:build && npm run frontend:start",
		"backend:build": "npm run build:ssr",
		"backend:dev": "npx tsx src/backend/start-api.ts",
		"backend:start": "cross-env SERVE_FRONTEND=false node dist/roomFood/server/server.mjs",
		"backend:start:full": "node dist/roomFood/server/server.mjs",
		"backend:full": "npm run backend:build && npm run backend:start:full",
		"test": "ng test",
		"init-db": "npx tsx src/backend/init-db.ts"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "angular"
				}
			}
		]
	},
	"private": true,
	"packageManager": "npm@10.9.3",
	"dependencies": {
		"@angular/common": "^21.2.0",
		"@angular/compiler": "^21.2.0",
		"@angular/core": "^21.2.0",
		"@angular/forms": "^21.2.0",
		"@angular/material": "^21.2.0",
		"@angular/platform-browser": "^21.2.0",
		"@angular/platform-server": "^21.2.0",
		"@angular/router": "^21.2.0",
		"@angular/ssr": "^21.2.0",
		"@jest/globals": "^30.2.0",
		"better-sqlite3": "^12.6.2",
		"express": "^5.1.0",
		"http-status-codes": "^2.3.0",
		"node-fetch": "^3.3.2",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^21.2.0",
		"@angular/cli": "^21.2.0",
		"@angular/compiler-cli": "^21.2.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.1",
		"@types/node": "^20.19.33",
		"cors": "^2.8.6",
		"cross-env": "^7.0.3",
		"jsdom": "^27.1.0",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.2",
		"vitest": "^4.0.8"
	}
}
